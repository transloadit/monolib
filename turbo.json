{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig.json"]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": ["*.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["build", "^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
