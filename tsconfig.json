{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["es2022"],
    "types": ["node"],
    "composite": true,
    "incremental": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
