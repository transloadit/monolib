{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": [
      "es6"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}