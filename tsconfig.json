{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2022"],
    "target": "es2022",
    "module": "commonjs",

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "types": ["node", "jest"],

    "declaration": true,
    "composite": true,
    "incremental": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
